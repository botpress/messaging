{
  "name": "@botpress/messaging",
  "version": "0.1.20",
  "description": "Botpress messaging repo",
  "author": "Botpress, Inc.",
  "license": "AGPL-3.0",
  "scripts": {
    "eslint": "eslint packages/ --ext .ts",
    "prettier": "prettier --check './packages/**/*.ts' '!**/*.d.ts'",
    "clean": "rimraf packages/*/dist bin",
    "reset": "yarn clean && rimraf .parcel-cache packages/*/node_modules && rimraf node_modules",
    "package": "yarn clean && yarn build && node ./scripts/package",
    "release": "node ./scripts/release",
    "build": "yarn workspace @botpress/messaging-server build",
    "watch": "yarn workspace @botpress/messaging-server watch",
    "start": "yarn workspace @botpress/messaging-server start",
    "dev": "yarn workspace @botpress/messaging-server dev",
    "board": "yarn workspace @botpress/messaging-board dev",
    "channels": "yarn workspace @botpress/messaging-channels example",
    "test": "yarn test:unit && yarn test:int && yarn test:e2e && yarn test:sec",
    "test:unit": "jest -c jest.unit.config.ts",
    "test:int": "jest -c jest.integration.config.ts",
    "test:e2e": "jest -c jest.e2e.config.ts",
    "test:sec": "jest -c jest.security.config.ts"
  },
  "bin": "./packages/server/dist/index.js",
  "pkg": {
    "scripts": "./packages/server/dist/**/*.js",
    "assets": [
      "./node_modules/sqlite3/lib/binding/**/*"
    ],
    "targets": [
      "node16-win32-x64",
      "node16-linux-x64",
      "node16-macos-x64"
    ],
    "outputPath": "./bin"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@types/jest-dev-server": "^5.0.0",
    "@types/node": "^16.11.13",
    "@typescript-eslint/eslint-plugin": "^5.8.0",
    "@typescript-eslint/parser": "^5.8.0",
    "bluebird": "^3.7.2",
    "bluebird-global": "^1.0.1",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^7.0.3",
    "eslint": "^8.5.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jsdoc": "37.4.0",
    "fs-extra": "^10.0.0",
    "jest": "^27.4.5",
    "jest-dev-server": "^6.0.3",
    "parcel": "1.12.3",
    "pkg": "^5.5.1",
    "prettier": "^2.5.1",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "ts-jest": "^27.1.2",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.5.4",
    "yargs": "^17.3.0"
  },
  "dependencies": {},
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "16.13.0"
  },
  "resolutions": {
    "**/@types/react": "^17.0.2"
  }
}
