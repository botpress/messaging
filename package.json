{
  "name": "@botpress/messaging",
  "version": "0.1.7",
  "description": "Botpress messaging repo",
  "author": "Botpress, Inc.",
  "license": "AGPL-3.0",
  "scripts": {
    "eslint": "eslint packages/ --ext .ts",
    "prettier": "prettier --check './packages/**/*.ts' '!**/*.d.ts'",
    "clean": "rimraf packages/*/dist bin",
    "reset": "yarn clean && rimraf .parcel-cache packages/*/node_modules && rimraf node_modules",
    "package": "yarn --silent && yarn clean && yarn build && node ./scripts/package",
    "release": "node ./scripts/release",
    "build": "yarn --silent && tsc --build",
    "watch": "yarn --silent && tsc --build --watch",
    "start": "cd packages/server && node dist/index.js",
    "dev": "cd packages/server && yarn --silent && ts-node-dev --inspect --inspect-publish-uid=http --transpile-only src/index.ts",
    "board": "cd packages/board && yarn dev",
    "test": "yarn workspace @botpress/messaging-server test"
  },
  "bin": "./packages/server/dist/index.js",
  "pkg": {
    "scripts": "./packages/server/dist/**/*.js",
    "assets": [
      "./node_modules/sqlite3/lib/binding/**/*"
    ],
    "targets": [
      "node12-win32-x64",
      "node12-linux-x64",
      "node12-macos-x64"
    ],
    "outputPath": "./bin"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.0",
    "eslint-plugin-jsdoc": "^35.5.1",
    "fs-extra": "^10.0.0",
    "parcel": "^2.0.0-beta.3.1",
    "pkg": "^4.3.7",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5",
    "yargs": "^17.0.1"
  },
  "dependencies": {},
  "private": true,
  "workspaces": [
    "packages/*"
  ]
}
