{
  "name": "@botpress/messaging",
  "version": "0.1.17",
  "description": "Botpress messaging repo",
  "author": "Botpress, Inc.",
  "license": "AGPL-3.0",
  "scripts": {
    "eslint": "eslint packages/ --ext .ts",
    "prettier": "prettier --check './packages/**/*.ts' '!**/*.d.ts'",
    "clean": "rimraf packages/*/dist bin",
    "reset": "yarn clean && rimraf .parcel-cache packages/*/node_modules && rimraf node_modules",
    "package": "yarn clean && yarn build && node ./scripts/package",
    "release": "node ./scripts/release",
    "build": "yarn workspace @botpress/messaging-server build",
    "watch": "yarn workspace @botpress/messaging-server watch",
    "start": "yarn workspace @botpress/messaging-server start",
    "dev": "yarn workspace @botpress/messaging-server dev",
    "board": "yarn workspace @botpress/messaging-board dev",
    "test": "jest --selectProjects Engine Server Components"
  },
  "bin": "./packages/server/dist/index.js",
  "pkg": {
    "scripts": "./packages/server/dist/**/*.js",
    "assets": [
      "./node_modules/sqlite3/lib/binding/**/*"
    ],
    "targets": [
      "node12-win32-x64",
      "node12-linux-x64",
      "node12-macos-x64"
    ],
    "outputPath": "./bin"
  },
  "devDependencies": {
    "@types/jest": "^27.0.3",
    "@typescript-eslint/eslint-plugin": "^4.29.3",
    "@typescript-eslint/parser": "^4.29.3",
    "conventional-changelog": "^3.1.24",
    "cross-env": "^7.0.3",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-import": "^2.24.1",
    "eslint-plugin-jsdoc": "35.5.1",
    "fs-extra": "^10.0.0",
    "jest": "^27.3.1",
    "parcel": "1.12.3",
    "pkg": "^4.5.1",
    "prettier": "^2.3.2",
    "rimraf": "^3.0.2",
    "semver": "^7.3.5",
    "ts-jest": "^27.0.7",
    "ts-node-dev": "^1.1.8",
    "typescript": "^4.3.5",
    "yargs": "^17.1.1"
  },
  "dependencies": {},
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "engines": {
    "node": "12.18.1"
  },
  "resolutions": {
    "**/@types/react": "^17.0.2"
  }
}
